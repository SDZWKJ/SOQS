   <mvc:interceptors>    
   		<mvc:interceptor>
   			<mvc:mapping path="/admin/**" />
   			<bean class="com.zwkj.soqs.interceptor.LoginInterceptor" />    
   		</mvc:interceptor>
   </mvc:interceptors>  
   --> 
</beans>




